@page
@using musicwithfriends.Pages.Room
@model musicwithfriends.Pages.Room.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <h4>Create a Room</h4>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <form method="post">
                <div class="form-group">
                    <label class="col-form-label" for="txtRoomName">Room Name: </label>
                    <input type="text" id="txtRoomName" class="form-control" value="@Html.DisplayFor(modelItem => modelItem.roomName)" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

