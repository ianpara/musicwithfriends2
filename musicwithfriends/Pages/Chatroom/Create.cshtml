@page
@model musicwithfriends.CreateModel

@{
    ViewData["Title"] = "Create";
}


<br />
<div class="col-md-9">
    <div class="card-title text-center">
        <h2>Create your chatroom.</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Chatroom.Name" class="control-label"></label>
                <input asp-for="Chatroom.Name" class="form-control" />
                <span asp-validation-for="Chatroom.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chatroom.CreatedDate" class="control-label"></label>
                <input asp-for="Chatroom.CreatedDate" class="form-control" />
                <span asp-validation-for="Chatroom.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a style="float:right" class="btn btn-outline-light" asp-page="Index">Back</a>
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
